<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageTeacherList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_portrait_24"/>

    <TextView
        android:id="@+id/textTeacherListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:text="Name"/>

    <TextView
        android:id="@+id/textTeacherListSurName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"/>

    <ImageView
        android:id="@+id/imageSeeProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_profile_search_24"/>

    <ImageView
        android:id="@+id/imageWriteMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_write_message_24"/>

</LinearLayout>